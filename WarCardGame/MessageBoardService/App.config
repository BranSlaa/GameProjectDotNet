<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup> 
      <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>

  <system.serviceModel>
      <services>
        <service name="WarCardGameLibrary.MessageBoard" behaviorConfiguration="MEXGET">
          <host>
            <baseAddresses>
              <add baseAddress="http://localhost:12000/"/>
            </baseAddresses>
          </host>
          <endpoint
            name="User"
            address="MessageBoardLibrary/User"
            binding="wsDualHttpBinding"
            bindingConfiguration="MyBindingConfig"
            contract="WarCardGameLibrary.IUser" />
         </service>
      </services>
      <behaviors>
        <serviceBehaviors>
          <behavior name="MEXGET">
            <serviceMetadata httpGetEnabled="true"/>
          </behavior>
        </serviceBehaviors>
      </behaviors>
    <bindings>
      <wsDualHttpBinding>
        <binding name="MyBindingConfig">
          <security mode="None"/>
        </binding>
      </wsDualHttpBinding>
    </bindings>
    
  </system.serviceModel>

</configuration>