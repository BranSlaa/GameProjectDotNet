<Window x:Class="WarCardGame.ScoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WarCardGame"
        mc:Ignorable="d"
        Title="ScoreWindow" Height="300" Width="300">
    <Grid>
		<ListView x:Name="lvScore" Margin="10">
			<ListView.View>
				<GridView>
					<GridViewColumn Header="Player Name" Width="120" DisplayMemberBinding="{Binding Key}" />
					<GridViewColumn Header="Score" Width="50" DisplayMemberBinding="{Binding Value}" />
				</GridView>
			</ListView.View>
		</ListView>
	</Grid>
</Window>
