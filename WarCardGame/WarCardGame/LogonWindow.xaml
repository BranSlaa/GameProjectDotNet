<Window x:Class="WarCardGame.LogonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WarCardGame"
        mc:Ignorable="d"
        Title="LogonWindow" Height="125" Width="300"
		WindowStartupLocation="CenterScreen">
    <Grid>
		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
			<Label Content="Please enter your name:"/>
			<TextBox x:Name="tbName" Width="100" Margin="10"/>
			<Button x:Name="btnSubmit" Content="Let's Play!" Width="60" Click="btnSubmit_Click"/>
		</StackPanel>
    </Grid>
</Window>
